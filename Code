bool search(int value, int values[], int n)
{
    if (n < 0)
    {
        return false;
    }
    
    int m;
    int l = values[0]
    int h = values[n-1]
    
    while ( h-l > 0 )
    {
        m = (h + l)/2;
        
        if ( values[m] == value )
        {
            return true;
        }
        else if ( values[m] < value)
        {
            l = m + 1;
        }
        else {
            h = m - 1;
        }
    }
    return false;
